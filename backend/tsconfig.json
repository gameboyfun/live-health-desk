{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "skipLibCheck": true  // This may help with some type declaration issues
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}